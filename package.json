{
  "scripts": {
    "prebuild": "node copy-docs.js",

    "watch-src": "nodemon --watch _src --exec \"npm run prebuild && npm run css && npm run serve\"",

    "serve": "npx eleventy --serve",

    "build:eleventy": "npx eleventy",

    "build:css": "npx postcss _src/css/styles.css -o dist/css/styles.css",

    "css": "npx postcss _src/css/styles.css -o dist/css/styles.css",

    "build": "npm run prebuild && concurrently \"npm run build:eleventy\" \"npm run build:css\"",

    "start": "concurrently \"npm run watch-src\""
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "concurrently": "^6.2.1",
    "cssnano": "^7.0.5",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^14.0.2",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-js": "^4.0.0",
    "postcss-preset-env": "^10.0.2",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@csstools/postcss-relative-color-syntax": "^3.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "nodemon": "^3.1.6",
    "postcss": "^8.4.41",
    "prettier": "^2.3.2"
  }
}
