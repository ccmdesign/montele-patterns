---
layout: ds/base.njk
title: Montele DS
css: /css/ds.css
---
<div class="ds-layout">
  <nav class="sidebar | stack-l | padding:m background-color:base-tint-05">
    <h3>{{ title }}</h3>
    {% set groupedItems = collections.all | groupByFolder('filePathStem') %}
    {% for folder, items in groupedItems %}
      <h4>{{ folder }}</h4>
      <ul>
      {% for item in items %}
        <li><a href="{{ item.filePathStem }}">{{ item.data.title }}</a></li>
      {% endfor %}
      </ul>
    {% endfor %}
  </nav>
  <div class="main | padding:m">
    {{ content | safe }}
  </div>
</div>



