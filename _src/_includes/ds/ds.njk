      <li><a href="{{ item.filePathStem }}">
        {{ item.data.title }}</a></li>
    {% endfor %} #}


  </nav>
  <div class="main | padding:m">
    <h1>{{ title }}</h1>
    {{ content | safe }}
  </div>
</div>



